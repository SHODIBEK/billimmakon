extends pug/base

append vars
    - title = 'Результаты поиска '
    - meta.description = 'Описание страницы'
    - meta.viewport = 'width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no'
    - link.icon = './favicon.ico'
    - meta.formatDetection = 'telephone=no'
    - meta.themeColor = '#1cd8c7'
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#1cd8c7">
    - defaultLink = 'javascript:void(0);'
    - body.classList = ['inner-page']; 
block content
    .wrapper
        // Шапка сайта
        include pages/header/header
        // Контент
        .main
            .crumbs
                .container
                    ul
                        li
                            a(href=`/` title="На главную")
                                | Главная
                        li
                            span Результаты поиска 
            .inner-title
                .container
                    h1
                        | Результаты поиска 
            .main-wrapper
                .container
                    .search-result
                        form(action="/" method="POST").search-result-form
                            .input-group
                                input(type="text" name="search" placeholder="Поиск по сайту")
                                button(type="submit").submit-btn
                                    +svg('search')
                        .search-result-items
                            -for(var i = 0; i < 10; i++) {
                                .search-result-item
                                    a(href="#").search-result-link
                                        h5 Примерный заголовок найденного материала
                                        span С другой стороны рамки и место обучения кадров в значительной степени обуславливает создание позиций, занимаемых участниками в отношении поставленных задач. Разнообразный и богатый опыт сложившаяся структура организации играет важную роль в формировании соответствующий условий активизации. Не следует, однако забывать, что консультация с широким активом представляет собой интересный эксперимент проверки системы обучения кадров, соответствует насущным потребностям.
                            - }
        include pages/footer/footer