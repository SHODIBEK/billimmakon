extends pug/base

append vars
    - title = 'Видео уроки'
    - meta.description = 'Описание страницы'
    - meta.viewport = 'width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no'
    - link.icon = './favicon.ico'
    - meta.formatDetection = 'telephone=no'
    - meta.themeColor = '#1cd8c7'
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#1cd8c7">
    - defaultLink = 'javascript:void(0);'
    - body.classList = ['inner-page']; 
block content
    .wrapper
        // Шапка сайта
        include pages/header/header
        // Контент
        .main
            .crumbs
                .container
                    ul
                        li
                            a(href=`/` title="На главную")
                                | Главная
                        li
                            span Видео уроки
            .inner-title
                .container
                    h1
                        | Видео уроки
            .main-wrapper
                .container
                    .video-section
                        .video-section__items
                            - for(var i = 0; i < 3; i++) {
                                .video-section__item
                                    h1.video-section__title
                                        | Наименование видео урока
                                    a(href=defaultLink data-src="https://www.youtube.com/embed/b5qHbsSNmHM?autoplay=1" allow="autoplay" data-type="iframe" data-fancybox data-small-btn="true" data-width='560' data-height="315").video-section__link
                                        img(src="images/content/project-1.jpg", alt="Наименование видео урока").video-section__img
                                        span.video-section__icon
                                            +svg('play')
                                .video-section__item
                                    h1.video-section__title
                                        | Наименование видео урока
                                    a(href=defaultLink data-src="https://mover.uz/video/embed/LLqUVDWm/?play=1" allow="autoplay" data-type="iframe" data-fancybox data-small-btn="true" data-width='640' data-height="360").video-section__link
                                        img(src="images/content/project-1.jpg", alt="Наименование видео урока").video-section__img
                                        span.video-section__icon
                                            +svg('play')
                            - }
                    .btn-block
                        button(type="button").btn
                            span показать еще
        include pages/footer/footer