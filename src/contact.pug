extends pug/base

append vars
    - title = 'Контакты'
    - meta.description = 'Описание страницы'
    - meta.viewport = 'width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no'
    - link.icon = './favicon.ico'
    - meta.formatDetection = 'telephone=no'
    - meta.themeColor = '#1cd8c7'
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#1cd8c7">
    - defaultLink = 'javascript:void(0);'
    - body.classList = ['inner-page']; 
block content
    .wrapper
        // Шапка сайта
        include pages/header/header
        // Контент
        .main
            .crumbs
                .container
                    ul
                        li
                            a(href=`/` title="На главную")
                                | Главная
                        li
                            span Контакты
            .main-wrapper
                .container
                    .contact
                        .contact-top
                            .contact-top-info
                                h5  Контакты
                                ul.contact-top-lists
                                    li.contact-top-list
                                        +svg('mark')
                                        span Адрес: г. Ташкент, у. Название улицы, дом номер дома, офис номер офиса
                                    li.contact-top-list
                                        +svg('time')
                                        span Режим работы: с 9:00 до 22:00
                                    li.contact-top-list
                                        +svg('phone')
                                        span телефон: <b>+99890 123 45 67</b>
                                    li.contact-top-list
                                        +svg('mail')
                                        span e-mail: <a href="mailto:bilimmakon@info.uz">bilimmakon@info.uz</a>
                            .contact-top-map
                                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d95915.87915676589!2d69.287936!3d41.3007872!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x38ae8b9cdd04953d%3A0xf8109d550917a88e!2z0KfQvtGAY9GDINCx0LDQt9Cw0YA!5e0!3m2!1sru!2s!4v1591152137452!5m2!1sru!2s" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
                        span.cloud
                        .contact-lists
                            -for(var i = 0; i < 4; i++) {
                                .contact-list
                                    h5 Нименование отдела
                                    p
                                        +svg('phone')
                                        span Телефон: <b>+99890 123 45 67</b>
                                    p
                                        +svg('mail')
                                        span e-mail: <a href="mailto:bilimmakon@info.uz">bilimmakon@info.uz</a>
                            - }
                .report-block
                    .container
                        .report-block-title
                            | Оставьте свои данные и мы свяжемся с вами в течении нескольких минут
                        form(action="/" method="POST").report-block-form
                            .input-group
                                input(type="text" name="name" placeholder="ФИО" required)
                                span.man-icon
                            .input-group
                                input(type="tel" name="name" placeholder="Ваш телефон" required)
                                span.phone-icon
                            .input-group
                                input(type="email" name="mail" placeholder="Ваша электронная почта" required)
                                span.message-icon
                            .input-group
                                textarea(name="text" placeholder="Текст вашего сообщения" required)
                                span.text-icon
                            .submit-btn
                                button(type="submit").btn
                                    span Отправить
                            <div class="visualCaptcha" id="simple-captcha">
                                <div class="visualCaptcha-possibilities">
                                    <div class="img">
                                        <a href="javascript:void(0);" role='shirt'>
                                            +svg('shirt')
                                        </a>
                                    </div>
                                    <div class="img">
                                        <a href="javascript:void(0);" role='headphone'>
                                            +svg('headphone')
                                        </a>
                                    </div>
                                    <div class="img">
                                        <a href="javascript:void(0);" class='active' role='auto'>
                                            +svg('auto')
                                        </a>
                                    </div>
                                    <div class="img">
                                        <a href="javascript:void(0);" role='buggy'>
                                            +svg('buggy')
                                        </a>
                                    </div>
                                    <div class="img">
                                        <a href="javascript:void(0);" role='coffee'>
                                            +svg('coffee')
                                        </a>
                                    </div>
                                    <div class="img">
                                        <a href="javascript:void(0);" role='airplain'>
                                            +svg('airplain')
                                        </a>
                                    </div>
                                </div>
                                <div class="visualCaptcha-explanation">Выберите&nbsp;<span class="active">"Детская коляска"</span>, чтобы подтвердить, что&nbsp;Вы не&nbsp;робот</div>
                            </div>
        include pages/footer/footer